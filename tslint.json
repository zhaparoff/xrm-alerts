{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {
        "no-console": false
    },
    "rules": {
        "object-literal-sort-keys": false,
        "no-empty": [
            true,
            "allow-empty-catch"
        ],
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "arrays": "never",
                    "exports": "never",
                    "functions": "never",
                    "imports": "never",
                    "objects": "never",
                    "typeLiterals": "never"
                },
                "singleline": {
                    "arrays": "never",
                    "exports": "never",
                    "functions": "never",
                    "imports": "never",
                    "objects": "never",
                    "typeLiterals": "never"
                },
                "esSpecCompliant": true
            }
        ],
        "max-line-length": [
            true,
            200
        ],
        "no-namespace": [
            true,
            "allow-declarations"
        ],
        "no-console": false,
        "no-consecutive-blank-lines": false,
        "ordered-imports": false
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": [
            "node_modules",
            "dist"
        ]
    }
}